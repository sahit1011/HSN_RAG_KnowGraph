# HSN RAG System Environment Variables
# Copy this file to .env and fill in your actual values

# OpenRouter API Configuration (Primary - Required for LLM-enhanced features)
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_MODEL=anthropic/claude-3-haiku  # or openai/gpt-4, meta-llama/llama-3.1-405b-instruct, etc.

# Alternative LLM Providers (Optional)
OPENAI_API_KEY=your_openai_api_key_here
# ANTHROPIC_API_KEY=your_anthropic_api_key_here
# GROQ_API_KEY=your_groq_api_key_here

# System Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=hsn_rag_system.log

# Vector Store Configuration
VECTOR_MODEL=all-MiniLM-L6-v2
VECTOR_DIMENSION=384

# Knowledge Graph Configuration
GRAPH_CACHE_SIZE=1000

# Data Processing Configuration
PDF_EXTRACTION_TIMEOUT=300
MAX_BATCH_SIZE=100

# Performance Settings
MAX_WORKERS=4
CACHE_TTL_HOURS=24